<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".view.admin.sp.ActivitySpList">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/laybarList11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:minHeight="?attr/actionBarSize"
            android:elevation="5dp">
            <LinearLayout
                android:id="@+id/laybarList12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/batalList"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_batal"/>

                <ImageView
                    android:id="@+id/lanjutList"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_lanjut"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/laybarList12"
                android:layout_toRightOf="@+id/backList1"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/dec_border">
                <EditText
                    android:id="@+id/namaList"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/colorRed"
                    android:hint="Nama Cust."
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/backList1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_kembali"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <RelativeLayout
            android:id="@+id/laybarList21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:minHeight="?attr/actionBarSize"
            android:elevation="5dp">
            <LinearLayout
                android:id="@+id/laybarList22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/cariList"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_cari"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/laybarList22"
                android:layout_toRightOf="@+id/backList2"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/dec_border">
                <Spinner
                    android:id="@+id/spinnerList"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@android:color/black"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/statusList"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="45dp"
                    android:background="@color/colorRed"
                    android:hint="Status SP"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/backList2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_kembali"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        tools:listitem="@layout/list_sp"/>
</LinearLayout>