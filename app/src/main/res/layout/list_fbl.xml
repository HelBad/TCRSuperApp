<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginHorizontal="5dp">
            <TextView
                android:id="@+id/statusFbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Status"
                android:textColor="@color/colorOrange"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgFbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/statusFbl"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/ic_silang"
                android:backgroundTint="@color/colorOrange"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/notaFbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imgFbl"
                android:layout_centerVertical="true"
                android:text="Nota"
                android:textColor="#FF04A9F3"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/namaFbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginHorizontal="5dp"
            android:text="Perusahaan"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/salesFbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginHorizontal="5dp"
            android:text="Sales"
            android:textColor="@color/colorGrey"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topFbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginHorizontal="5dp"
            android:text="TOP"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/limitFbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Limit"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>